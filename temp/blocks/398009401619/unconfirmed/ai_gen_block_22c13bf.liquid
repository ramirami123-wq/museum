{% doc %}
  @prompt
    collapsible content
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collapsible-{{ ai_gen_id }} {
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    display: block;
  }

  .ai-collapsible-container-{{ ai_gen_id }} {
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collapsible-item-{{ ai_gen_id }} {
    border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-collapsible-item-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-collapsible-header-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ block.settings.padding }}px;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: background-color 0.3s ease;
  }

  .ai-collapsible-header-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.hover_color }};
  }

  .ai-collapsible-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0;
  }

  .ai-collapsible-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
    color: {{ block.settings.icon_color }};
  }

  .ai-collapsible-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-collapsible-header-{{ ai_gen_id }}[aria-expanded="true"] .ai-collapsible-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-collapsible-content-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .ai-collapsible-content-{{ ai_gen_id }}.active {
    max-height: 1000px;
  }

  .ai-collapsible-content-inner-{{ ai_gen_id }} {
    padding: 0 {{ block.settings.padding }}px {{ block.settings.padding }}px;
    font-size: {{ block.settings.content_size }}px;
    color: {{ block.settings.content_color }};
    line-height: 1.6;
  }
{% endstyle %}

<collapsible-content-{{ ai_gen_id }} class="ai-collapsible-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collapsible-container-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign title_key = 'item_' | append: i | append: '_title'
        assign content_key = 'item_' | append: i | append: '_content'
        assign open_key = 'item_' | append: i | append: '_open'
        
        assign item_title = block.settings[title_key]
        assign item_content = block.settings[content_key]
        assign item_open = block.settings[open_key]
      %}
      
      {% if item_title != blank %}
        <div class="ai-collapsible-item-{{ ai_gen_id }}">
          <button
            class="ai-collapsible-header-{{ ai_gen_id }}"
            aria-expanded="{% if item_open %}true{% else %}false{% endif %}"
            data-index="{{ i }}"
          >
            <h3 class="ai-collapsible-title-{{ ai_gen_id }}">{{ item_title }}</h3>
            <span class="ai-collapsible-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </span>
          </button>
          <div class="ai-collapsible-content-{{ ai_gen_id }} {% if item_open %}active{% endif %}">
            <div class="ai-collapsible-content-inner-{{ ai_gen_id }}">
              {{ item_content }}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</collapsible-content-{{ ai_gen_id }}>

<script>
  (function() {
    class CollapsibleContent{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.buttons = this.querySelectorAll('.ai-collapsible-header-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.buttons.forEach((button) => {
          button.addEventListener('click', () => {
            const isExpanded = button.getAttribute('aria-expanded') === 'true';
            const content = button.nextElementSibling;

            if (isExpanded) {
              button.setAttribute('aria-expanded', 'false');
              content.classList.remove('active');
            } else {
              button.setAttribute('aria-expanded', 'true');
              content.classList.add('active');
            }
          });
        });
      }
    }

    customElements.define('collapsible-content-{{ ai_gen_id }}', CollapsibleContent{{ ai_gen_id }});
  })();
</script>

